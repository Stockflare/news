<% if logged_in? %>
  <div class="voter <%= vote_class_for post.id %> background-clear bordered micro-xs-right-margin small-sm-right-margin" itemprop="interactionStatistic" itemscope itemtype="http://schema.org/InteractionCounter">
      <a href="#" class="vote up text-positive-hover" data-attitude="1" data-id="<%= post.id %>" data-created_at="<%= post.created_at %>">
        <i class="abs-line-height fa fa-caret-up fa-lg"></i>
      </a>
      <% if !vote.empty? %>
        <p class="no-xs-margin
          <%= 'text-negative' if vote.likes - vote.dislikes < 0 %>
          <%= 'text-brand' if vote.likes - vote.dislikes > 0 %>" itemprop="userInteractionCount">
          <%= vote.likes - vote.dislikes %>
        </p>
      <% else %>
        <p class="no-xs-margin">0</p>
      <% end %>
      <a href="#" class="vote down text-negative-hover" data-attitude="0" data-id="<%= post.id %>" data-created_at="<%= post.created_at %>">
        <i class="abs-line-height fa fa-caret-down fa-lg"></i>
      </a>
  </div>
<% else %>
  <a href="<%= login_path %>">
    <div class="voter <%= vote_class_for post.id %> background-clear bordered micro-xs-right-margin small-sm-right-margin" itemprop="interactionStatistic" itemscope itemtype="http://schema.org/InteractionCounter">
        <i class="abs-line-height fa fa-caret-up fa-lg"></i>
        <% if !vote.empty? %>
          <p class="no-xs-margin
            <%= 'text-negative' if vote.likes - vote.dislikes < 0 %>
            <%= 'text-brand' if vote.likes - vote.dislikes > 0 %>" itemprop="userInteractionCount">
            <%= vote.likes - vote.dislikes %>
          </p>
        <% else %>
          <p class="no-xs-margin">0</p>
        <% end %>
        <i class="abs-line-height fa fa-caret-down fa-lg"></i>
    </div>
  </a>
<% end %>
